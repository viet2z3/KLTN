<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewVideoLectures"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F9F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutVideoLecturesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Header -->
                <LinearLayout
                    android:id="@+id/layoutHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F9F9F9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/buttonBack"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginVertical="12dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/back" />

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Video Lectures"
                        android:textColor="#0F1416"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginVertical="12dp" />
                </LinearLayout>
                <!-- Search Bar -->
                <LinearLayout
                    android:id="@+id/layoutSearchBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/tl12bl12be8edf2"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/iconSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/search" />

                    <EditText
                        android:id="@+id/editTextSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search for videos..."
                        android:inputType="text"
                        android:paddingVertical="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:textColor="#5B7589"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- Video Item 1 -->
                <LinearLayout
                    android:id="@+id/layoutVideoItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/layoutVideoInfo1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="19dp">

                        <TextView
                            android:id="@+id/textLessonTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Lesson 1: The Alphabet"
                            android:textColor="#0F1416"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textLessonDesc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="Introduction to the alphabet"
                            android:textColor="#5B7589"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageLesson1"
                        android:layout_width="130dp"
                        android:layout_height="64dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/video1"
                        app:shapeAppearanceOverlay="@style/cr12" />
                </LinearLayout>
                <!-- Video Item 2 -->
                <LinearLayout
                    android:id="@+id/layoutVideoItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/layoutVideoInfo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="19dp">

                        <TextView
                            android:id="@+id/textLessonTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Lesson 2: Counting"
                            android:textColor="#0F1416"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textLessonDesc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="Learn to count from 1 to 10"
                            android:textColor="#5B7589"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageLesson2"
                        android:layout_width="130dp"
                        android:layout_height="64dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/video2"
                        app:shapeAppearanceOverlay="@style/cr12" />
                </LinearLayout>
                <!-- Video Item 3 -->
                <LinearLayout
                    android:id="@+id/layoutVideoItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/layoutVideoInfo3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="19dp">

                        <TextView
                            android:id="@+id/textLessonTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Lesson 3: Colors"
                            android:textColor="#0F1416"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textLessonDesc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="Learn to color"
                            android:textColor="#5B7589"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageLesson3"
                        android:layout_width="130dp"
                        android:layout_height="64dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/video3"
                        app:shapeAppearanceOverlay="@style/cr12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
