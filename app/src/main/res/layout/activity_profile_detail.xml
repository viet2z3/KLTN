<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface"
        android:padding="0dp">

        <!-- Header with back arrow and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/back"
                android:contentDescription="Back"
                app:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Profile"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingEnd="36dp" />
        </LinearLayout>

        <!-- Avatar and name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_circle_bg"
                android:contentDescription="Avatar"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ethan Carter"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center" />


            <TextView
                android:id="@+id/tvChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to change your profile picture"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Personal Information Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Info Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/surface">

            <include layout="@layout/item_profile_info"
                android:id="@+id/itemFullName" />
            <include layout="@layout/item_profile_info"
                android:id="@+id/itemGender" />
            <include layout="@layout/item_profile_info"
                android:id="@+id/itemEmail" />
            <include layout="@layout/item_profile_info"
                android:id="@+id/itemRole" />
            <include layout="@layout/item_profile_info"
                android:id="@+id/itemCourseName" />
            <include layout="@layout/item_profile_info"
                android:id="@+id/itemClassName" />
            <include layout="@layout/item_profile_info"
                android:id="@+id/itemLevel" />
            <include layout="@layout/item_profile_info"
                android:id="@+id/itemTeacher" />
        </LinearLayout>

        <!-- Buttons -->

    </LinearLayout>
</ScrollView>
