<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeColor="@color/primary_light_blue"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Badge Icon -->
        <ImageView
            android:id="@+id/iv_badge_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_launcher_foreground"
            android:contentDescription="Badge Icon"
            android:padding="12dp"
            android:backgroundTint="@color/primary_blue" />

        <!-- Badge Name -->
        <TextView
            android:id="@+id/tv_badge_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Badge Name"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Badge Description -->
        <TextView
            android:id="@+id/tv_badge_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Badge description"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <!-- Badge Status -->
        <TextView
            android:id="@+id/tv_badge_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_launcher_foreground"
            android:backgroundTint="@color/success_green"
            android:padding="4dp"
            android:text="@string/badge_earned"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 