<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card Number -->
        <TextView
            android:id="@+id/tvCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card 1"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <!-- Front Text (Question) -->
        <TextView
            android:id="@+id/tvFrontText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Front text of the flashcard"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:minHeight="80dp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Image (if available) -->
        <ImageView
            android:id="@+id/ivFlashcardImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/card_background"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:contentDescription="Flashcard image" />

        <!-- Back Text (Answer) - Initially hidden -->
        <TextView
            android:id="@+id/tvBackText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back text of the flashcard"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:minHeight="60dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Example Sentence - Initially hidden -->
        <TextView
            android:id="@+id/tvExampleSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example sentence"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Tap to flip hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to flip"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 