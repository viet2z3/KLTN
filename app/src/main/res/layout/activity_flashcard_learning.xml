<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rv0onp2b5tf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rjwy2q00ga0p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9F9F9"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/r1226i2dy3op"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="219dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/r4hewnsar155"
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#F9F9F9"
                        android:padding="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/r9povenff2qb"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_marginVertical="12dp"
                            android:layout_marginEnd="24dp"
                            android:src="@mipmap/back"
                            android:scaleType="fitXY" />
                        <TextView
                            android:id="@+id/rxfo42azkmga"
                            android:textColor="#5C708A"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Learn Vocabulary" />
                    </LinearLayout>
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F9F9F9"
                        app:tabIndicatorColor="#5C708A"
                        app:tabSelectedTextColor="#263238"
                        app:tabTextColor="#607D8B"
                        app:tabMode="scrollable"
                        app:tabGravity="fill"
                        android:textSize="21sp"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Empty state message for flashcard set with no cards -->
                    <TextView
                        android:id="@+id/tvEmptyFlashcardSet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bộ flashcard này chưa có dữ liệu."
                        android:textSize="18sp"
                        android:textColor="#E53935"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="24dp"
                        android:background="#FFF8E1" />

                    <!-- Main flashcard container for easy visibility control -->
                    <LinearLayout
                        android:id="@+id/flashcardMainContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/flashcardCardView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="36dp"
                        android:layout_marginHorizontal="20dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="12dp"
                        android:background="#F3F6FB">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="36dp"
                            android:gravity="center_horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/r4tyal07kb98"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:layout_marginBottom="12dp"
                                android:scaleType="fitCenter"
                                app:shapeAppearanceOverlay="@style/cr12"
                                android:src="@drawable/flashcard_exp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/tvFlashcardText"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start|center_vertical"
                                    android:textColor="#5C708A"
                                    android:textSize="21sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginStart="10dp"
                                    android:text="Red" />
                                <ImageButton
                                    android:id="@+id/btnPlayWordAudio"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/baseline_volume_up_24"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="Play word audio"/>
                                <TextView
                                    android:id="@+id/tvFlashcardHint"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end|center_vertical"
                                    android:textColor="#607D8B"
                                    android:textSize="22sp"
                                    android:fontFamily="sans-serif-light"
                                    android:layout_marginEnd="10dp"
                                    android:text="Màu đỏ" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvFlashcardExample"
                                android:textColor="#5C708A"
                                android:textSize="17sp"
                                android:fontFamily="sans-serif"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Ví dụ: The apple is red."
                                android:visibility="gone" />
                            <ImageButton
                                android:id="@+id/btnPlayExampleAudio"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/baseline_volume_up_24"
                                android:background="@android:color/transparent"
                                android:contentDescription="Play example audio"
                                android:visibility="gone" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/llFlashcardNav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageButton
                            android:id="@+id/btnFlashcardBack"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@android:color/transparent"
                            android:src="@android:drawable/ic_media_previous"
                            android:contentDescription="Back"
                            app:tint="#5C708A" />
                        <Space
                            android:layout_width="32dp"
                            android:layout_height="1dp" />
                        <ImageButton
                            android:id="@+id/btnFlashcardNext"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@android:color/transparent"
                            android:src="@android:drawable/ic_media_next"
                            android:contentDescription="Next"
                            app:tint="#5C708A" />
                    </LinearLayout>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/flashcardProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="-8dp"
                        app:indicatorColor="#5C708A"
                        app:trackColor="#E0E0E0"
                        app:trackThickness="8dp" />
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rgb3qlv77dz5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ryamgmvsjbha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingBottom="1dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginHorizontal="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvProgress"
                                android:textColor="#5C708A"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Card 3/10"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rcbb92x82ouh"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#F9F9F9"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
