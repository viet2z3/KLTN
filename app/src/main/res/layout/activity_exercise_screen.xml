<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rdvy0tudkhyd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r5s6t8ibqldk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9F9F9"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rcxrhmzjqqts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="348dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rd62rlq125ap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:gravity="center_vertical"
                        android:background="#F9F9F9"
                        android:padding="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/rnpiaghf5f8a"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_marginVertical="12dp"
                            android:layout_marginEnd="24dp"
                            android:src="@mipmap/back"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/rzhd2mvpx3s9"
                            android:textColor="#0F1619"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Do Exercises"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rvoc4y540sm"
                        android:textColor="#0F1619"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Available Sets"
                        />
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabIndicatorColor="@color/purple_500"
                        app:tabSelectedTextColor="@color/purple_500"
                        app:tabTextColor="@color/black"
                        />
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
