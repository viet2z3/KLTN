<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activities.AdminDashboardActivity"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_admin"
        android:background="@android:color/transparent"
        tools:ignore="UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:background="@android:color/transparent">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:background="@android:color/transparent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Admin Dashboard"
                    android:textColor="#101518"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="0dp" />
            </LinearLayout>

            <!-- System Overview Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Overview"
                android:textColor="#1E293B"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp" />

            <!-- Overview Cards -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center"
                    android:background="@drawable/card_gradient"
                    android:backgroundTintMode="src_in"
                    android:clipToPadding="false">

                    <!-- Row 1: Total Users & Classes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#eaedf1"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:elevation="2dp"
                            android:backgroundTint="#eaedf1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Users"
                                android:textColor="#101518"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_total_users"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1,250"
                                android:textColor="#101518"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#eaedf1"
                            android:padding="16dp"
                            android:gravity="center"
                            android:elevation="2dp"
                            android:backgroundTint="#eaedf1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Classes"
                                android:textColor="#101518"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_total_classes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#101518"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2: Logins & Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#eaedf1"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:elevation="2dp"
                            android:backgroundTint="#eaedf1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teachers"
                                android:textColor="#101518"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_total_logins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3,500"
                                android:textColor="#101518"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#eaedf1"
                            android:padding="16dp"
                            android:gravity="center"
                            android:elevation="2dp"
                            android:backgroundTint="#eaedf1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Content"
                                android:textColor="#101518"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_total_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:textColor="#101518"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textColor="#1E293B"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp" />

            <!-- Quick Actions Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:padding="8dp"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                    <!-- Action 1: Manage Users -->
                    <LinearLayout
                        android:id="@+id/action_manage_users"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/card_gradient"
                        android:backgroundTintMode="src_in"
                        android:clipToPadding="false"
                        android:elevation="1dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:shape="rectangle"
                        android:radius="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/admin_user"
                            android:contentDescription="Manage Users" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Users"
                            android:textColor="#101518"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="10dp" />
                    </LinearLayout>

                    <!-- Action 2: Manage Classes -->
                    <LinearLayout
                        android:id="@+id/action_manage_classes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/card_gradient"
                        android:backgroundTintMode="src_in"
                        android:clipToPadding="false"
                        android:elevation="1dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:shape="rectangle"
                        android:radius="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/admin_class"
                            android:contentDescription="Manage Classes" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Classes"
                            android:textColor="#101518"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="10dp" />
                    </LinearLayout>

                    <!-- Action 3: Manage Content -->
                    <LinearLayout
                        android:id="@+id/action_manage_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/card_gradient"
                        android:backgroundTintMode="src_in"
                        android:clipToPadding="false"
                        android:elevation="1dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:shape="rectangle"
                        android:radius="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/admin_content"
                            android:contentDescription="Manage Content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Content"
                            android:textColor="#101518"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="10dp" />
                    </LinearLayout>

                    <!-- Action 5: Settings -->
                    <LinearLayout
                        android:id="@+id/action_manage_courses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/card_gradient"
                        android:backgroundTintMode="src_in"
                        android:clipToPadding="false"
                        android:elevation="1dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:shape="rectangle"
                        android:radius="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/admin_role"
                            android:contentDescription="Manage Courses" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Courses"
                            android:textColor="#101518"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/card_gradient"
                        android:backgroundTintMode="src_in"
                        android:clipToPadding="false"
                        android:elevation="1dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:shape="rectangle"
                        android:radius="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/setting"
                            android:contentDescription="Settings" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textColor="#101518"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="10dp" />
                    </LinearLayout>

                    <!-- Action 6: Question Bank -->
                    <LinearLayout
                        android:id="@+id/action_question_bank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/card_gradient"
                        android:backgroundTintMode="src_in"
                        android:clipToPadding="false"
                        android:elevation="1dp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:shape="rectangle"
                        android:radius="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/admin_report"
                            android:contentDescription="Question Bank" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Question Bank"
                            android:textColor="#101518"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="10dp" />
                    </LinearLayout>

            </GridLayout>
            </LinearLayout>
        </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/card_gradient"
        app:menu="@menu/bottom_view_admin"
        android:fitsSystemWindows="true" />
    </RelativeLayout>




