<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_bg"
    tools:context=".activities.AssignLessonActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/secondary_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="@color/design_text_primary" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/assign_lesson_assign_lesson"
            android:textColor="@color/design_text_primary"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingEnd="48dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Lesson Type -->
    <TextView
        android:id="@+id/label_lesson_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/assign_lesson_lesson_type"
        android:textColor="@color/design_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/lesson_type_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_lesson_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radio_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson_type_video"
            android:buttonTint="@color/design_blue"
            android:textColor="@color/design_text_primary"
            />
        <!-- Add more lesson types as needed -->
    </RadioGroup>

    <!-- Content -->
    <TextView
        android:id="@+id/label_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/assign_lesson_content"
        android:textColor="@color/design_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lesson_type_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/content_dropdown"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/spinner_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/label_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/content_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/assign_lesson_select_content"
            android:textColor="@color/design_text_primary"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/content_dropdown_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_caret_down"
            android:contentDescription="Dropdown"
            app:tint="@color/design_text_primary" />
    </LinearLayout>

    <!-- Video URL -->
    <TextView
        android:id="@+id/label_video_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/assign_lesson_video_url"
        android:textColor="@color/design_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/content_dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_video_url"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/spinner_bg"
        android:hint="@string/assign_lesson_video_url_hint"
        android:textColor="@color/design_text_primary"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:inputType="textUri"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/label_video_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Assign To -->
    <TextView
        android:id="@+id/label_assign_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/assign_lesson_assign_to"
        android:textColor="@color/design_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_video_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/assign_to_dropdown"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/spinner_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/label_assign_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/assign_to_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/assign_lesson_select_students"
            android:textColor="@color/design_text_primary"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/assign_to_dropdown_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_caret_down"
            android:contentDescription="Dropdown"
            app:tint="@color/design_text_primary" />
    </LinearLayout>

    <!-- Due Date -->
    <TextView
        android:id="@+id/label_due_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/assign_lesson_due_date"
        android:textColor="@color/design_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/assign_to_dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/due_date_picker"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/spinner_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/label_due_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/due_date_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/assign_lesson_select_date"
            android:textColor="@color/design_text_primary"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/due_date_dropdown_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_caret_down"
            android:contentDescription="Dropdown"
            app:tint="@color/design_text_primary" />
    </LinearLayout>

    <!-- Assign Button -->
    <Button
        android:id="@+id/btn_assign_lesson"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/assign_lesson_assign_lesson"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/design_blue"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/due_date_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
