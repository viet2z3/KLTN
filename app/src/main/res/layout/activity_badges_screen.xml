<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollViewBadges"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F9F9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/mainVerticalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#F9F9F9"
                    android:padding="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_marginVertical="12dp"
                        android:layout_marginEnd="24dp"
                        android:src="@mipmap/back"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/tv_my_badges"
                        android:textColor="#0F1419"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="My Badges" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_badges_earned"
                    android:textColor="#0F1419"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Badges Earned" />
                <LinearLayout
                    android:id="@+id/layout_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layout_progress_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_progress_label"
                            android:textColor="#0F1419"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Progress" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="12dp"
                        android:progress="66"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_primary" />
                    <TextView
                        android:id="@+id/tv_badges_earned_count"
                        android:textColor="#56758E"
                        android:textSize="14sp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="4/6 badges earned" />
                </LinearLayout>
                <!-- Thay thế phần danh sách badge hard code bằng RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBadges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_badge" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
