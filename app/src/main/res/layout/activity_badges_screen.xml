<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollViewBadges"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F9F9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/mainVerticalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#F9F9F9"
                    android:padding="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_marginVertical="12dp"
                        android:layout_marginEnd="24dp"
                        android:src="@mipmap/back"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/tv_my_badges"
                        android:textColor="#0F1419"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="My Badges" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_badges_earned"
                    android:textColor="#0F1419"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Badges Earned" />
                <LinearLayout
                    android:id="@+id/layout_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layout_progress_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_progress_label"
                            android:textColor="#0F1419"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Progress" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="12dp"
                        android:progress="66"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_primary" />
                    <TextView
                        android:id="@+id/tv_badges_earned_count"
                        android:textColor="#56758E"
                        android:textSize="14sp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="4/6 badges earned" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/badgeSection1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/badgeRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/badgeItem1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="33dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/badgeImage1Left"
                                android:layout_width="match_parent"
                                android:layout_height="141dp"
                                android:layout_marginBottom="12dp"
                                android:src="@drawable/bad1"
                                android:scaleType="fitXY"
                                />
                            <LinearLayout
                                android:id="@+id/badgeTextContainer1Left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/badgeTitle1Left"
                                    android:textColor="#0F1419"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Vocabulary Star"
                                    />
                                <TextView
                                    android:id="@+id/badgeDesc1Left"
                                    android:textColor="#56758E"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Learn 100 new words"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/badgeItem2Left"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="33dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/badgeImage2Left"
                                android:layout_width="match_parent"
                                android:layout_height="141dp"
                                android:layout_marginBottom="12dp"
                                android:src="@drawable/bad2"
                                android:scaleType="fitXY"
                                />
                            <LinearLayout
                                android:id="@+id/badgeTextContainer2Left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/badgeTitle2Left"
                                    android:textColor="#0F1419"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Wise Mind"
                                    />
                                <TextView
                                    android:id="@+id/badgeDesc2Left"
                                    android:textColor="#56758E"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Complete 5 mindfulness exercises"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/badgeSection2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/badgeRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/badgeItem1Right"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="33dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/badgeImage1Right"
                                android:layout_width="match_parent"
                                android:layout_height="141dp"
                                android:layout_marginBottom="12dp"
                                android:src="@drawable/bad3"
                                android:scaleType="fitXY"
                                />
                            <LinearLayout
                                android:id="@+id/badgeTextContainer1Right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/badgeTitle1Right"
                                    android:textColor="#0F1419"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Diligent Learner"
                                    />
                                <TextView
                                    android:id="@+id/badgeDesc1Right"
                                    android:textColor="#56758E"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Study for 30 days in a row"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/badgeItem2Right"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="33dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/badgeImage2Right"
                                android:layout_width="match_parent"
                                android:layout_height="141dp"
                                android:layout_marginBottom="12dp"
                                android:src="@drawable/bad4"
                                android:scaleType="fitXY"
                                />
                            <LinearLayout
                                android:id="@+id/badgeTextContainer2Right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/badgeTitle2Right"
                                    android:textColor="#0F1419"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="FlashCard Expect"
                                    />
                                <TextView
                                    android:id="@+id/badgeDesc2Right"
                                    android:textColor="#56758E"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Master 50 flashcards"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/badgeSection3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/badgeRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/badgeItem1Left"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="33dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/badgeImage1Left2"
                                android:layout_width="match_parent"
                                android:layout_height="141dp"
                                android:layout_marginBottom="12dp"
                                android:src="@drawable/bad5"
                                android:scaleType="fitXY"
                                />
                            <LinearLayout
                                android:id="@+id/badgeTextContainer1Left2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/badgeTitle1Left2"
                                    android:textColor="#0F1419"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Review SuperStar"
                                    />
                                <TextView
                                    android:id="@+id/badgeDesc1Left2"
                                    android:textColor="#56758E"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Review 20 lessons"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/badgeItem2Left2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="33dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/badgeImage2Left2"
                                android:layout_width="match_parent"
                                android:layout_height="141dp"
                                android:layout_marginBottom="12dp"
                                android:src="@drawable/bad6"
                                android:scaleType="fitXY"
                                />
                            <LinearLayout
                                android:id="@+id/badgeTextContainer2Left2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/badgeTitle2Left2"
                                    android:textColor="#0F1419"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Exemplary Student"
                                    />
                                <TextView
                                    android:id="@+id/badgeDesc2Left2"
                                    android:textColor="#56758E"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Achieve 90% accuracy in all lessons"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
