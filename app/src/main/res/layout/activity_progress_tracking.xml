<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#F8F8F8">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/back"
                android:contentDescription="Back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Progress Tracking"
                android:textColor="#222"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingEnd="48dp" />
        </LinearLayout>

        <!-- 4 Stats Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:id="@+id/layout_stats_cards">

            <!-- Words Learned Card -->
            <LinearLayout
                android:id="@+id/card_flashcard"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/flashcard"
                    android:contentDescription="Words Learned"
                    android:background="@drawable/rounded_background" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="FlashCard Completed"
                            android:textColor="#5C708A"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_words_learned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#222"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"/>
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progress_words_learned"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginTop="4dp"
                        android:progressDrawable="@drawable/progress_primary"/>
                    <TextView
                        android:id="@+id/tv_words_learned_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Exercises Completed Card -->
            <LinearLayout
                android:id="@+id/card_exercise"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/baitap"
                    android:contentDescription="Exercises Completed"
                    android:background="@drawable/rounded_background" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Exercises Completed"
                            android:textColor="#5C708A"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_exercises_completed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#222"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"/>
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progress_exercises_completed"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginTop="4dp"
                        android:progressDrawable="@drawable/progress_primary"/>
                    <TextView
                        android:id="@+id/tv_exercises_completed_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tests Completed Card -->
            <LinearLayout
                android:id="@+id/card_test"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/kiemtra"
                    android:contentDescription="Tests Completed"
                    android:background="@drawable/rounded_background" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tests Completed"
                            android:textColor="#5C708A"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_tests_completed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#222"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"/>
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progress_tests_completed"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginTop="4dp"
                        android:progressDrawable="@drawable/progress_primary"/>
                    <TextView
                        android:id="@+id/tv_tests_completed_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Videos Watched Card -->
            <LinearLayout
                android:id="@+id/card_video"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/video"
                    android:contentDescription="Videos Watched"
                    android:background="@drawable/rounded_background" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Videos Watched"
                            android:textColor="#5C708A"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_videos_watched"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#222"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"/>
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progress_videos_watched"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginTop="4dp"
                        android:progressDrawable="@drawable/progress_primary"/>
                    <TextView
                        android:id="@+id/tv_videos_watched_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

        <!-- Evaluation Card (đặt ngoài LinearLayout 4 stats card để tránh lỗi resource) -->
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_evaluation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày đánh giá: 2025-07-24"
                    android:textColor="#222"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giáo viên đánh giá: "
                    android:textColor="#5C708A"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <!-- 3 dòng, mỗi dòng 1 rating bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Tham gia: "
                        android:textColor="#888"
                        android:textSize="14sp" />
                    <RatingBar
                        android:id="@+id/rating_participation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:progressTint="@color/star_yellow" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Hiểu bài: "
                        android:textColor="#888"
                        android:textSize="14sp" />
                    <RatingBar
                        android:id="@+id/rating_understanding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:progressTint="@color/star_yellow" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Tiến bộ: "
                        android:textColor="#888"
                        android:textSize="14sp" />
                    <RatingBar
                        android:id="@+id/rating_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:progressTint="@color/star_yellow" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_overall_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm tổng: 0.0"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm số: 0"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhận xét: "
                    android:textColor="#5C708A"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- Bottom Navigation Placeholder -->
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FFFFFF" />
    </LinearLayout>
</ScrollView>