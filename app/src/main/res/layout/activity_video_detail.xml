<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r6kqq9s32h1y"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F9F9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rxr6pdhoaud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9F9F9"
                android:padding="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rz8upxsnrfn9"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="24dp"
                    android:src="@mipmap/back"
                    android:scaleType="fitXY"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/ro901y0unbhc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingVertical="12dp"
                    android:paddingLeft="24dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/rlhjx4h8peg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/trinhchieu"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/rh49g4vrwbfe"
                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:src="@drawable/video4"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/rfxxxes5byk5"
                android:textColor="#0F1419"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Learn the Alphabet"
                />
            <TextView
                android:id="@+id/r6nrzucmp76v"
                android:textColor="#0F1419"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Join our friendly cartoon character as they guide you through the alphabet with fun songs and activities."
                />
            <TextView
                android:id="@+id/rar9mr8jewba"
                android:textColor="#0F1419"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Related Videos"
                />
            <LinearLayout
                android:id="@+id/r1x157g8837s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="26dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rztbhbw3db5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr8"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/r7rwtvm6ydbr"
                        app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.ShapeableImageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/video4"
                        android:scaleType="centerCrop"
                        />
                    <LinearLayout
                        android:id="@+id/r7vua35li4k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/r6nte44rqm64"
                            android:textColor="#0F1419"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="1dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Phonics Fun"
                            />
                        <TextView
                            android:id="@+id/rv2khbt5y8g9"
                            android:textColor="#59758C"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Learn to read"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rcu2bu5w68gt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr8"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rrtmqrk2ctt"
                        app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.ShapeableImageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/video5"
                        android:scaleType="centerCrop"
                        />
                    <LinearLayout
                        android:id="@+id/ri2l279z55a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/r1w1k1kxyem8"
                            android:textColor="#0F1419"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="1dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Story Time"
                            />
                        <TextView
                            android:id="@+id/ru14dm7if9of"
                            android:textColor="#59758C"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Listen to stories"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/r7g9grmyzp2i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rswevm4s30o"
                        app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.ShapeableImageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/video6"
                        android:scaleType="centerCrop"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/related_video_title3"
                            android:textColor="#0F1419"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="1dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Alphabet Song" />
                        <TextView
                            android:id="@+id/related_video_desc3"
                            android:textColor="#59758C"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Sing along" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>