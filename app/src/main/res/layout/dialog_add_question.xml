<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm câu hỏi mới"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Question Content -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung câu hỏi *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etQuestionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nội dung câu hỏi..."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:layout_marginBottom="16dp" />

        <!-- Question Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại câu hỏi *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerQuestionType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginBottom="16dp" />

        <!-- Difficulty -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Độ khó *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerQuestionDifficulty"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginBottom="16dp" />

        <!-- Course -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khóa học *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerQuestionCourse"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginBottom="16dp" />

        <!-- Options Container (for Multiple Choice) -->
        <LinearLayout
            android:id="@+id/containerOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Các lựa chọn *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnAddOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Thêm lựa chọn"
                android:textSize="12sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Correct Answer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án đúng *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập đáp án đúng..."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Explanation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giải thích"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập giải thích (tùy chọn)..."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4"
            android:layout_marginBottom="16dp" />

        <!-- Tags -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tags (phân cách bằng dấu phẩy)..."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textSize="14sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/gray_50"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:textSize="14sp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 