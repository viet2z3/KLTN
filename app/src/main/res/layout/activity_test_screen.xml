<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/ri8dop2qywvb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rivjlfdk5et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9F9F9"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rt3ei6c2elx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="221dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rqnb81mi7iih"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F9F9F9"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/rl7d37qjb4pp"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@mipmap/x"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/rj59uk9s5u7"
                            android:textColor="#0F1419"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Test" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <LinearLayout
                            android:id="@+id/recsybqqmz9m"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:orientation="vertical" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/rezfk9pzccbg"
                        android:layout_width="match_parent"
                        android:layout_height="218dp"
                        android:src="@drawable/test"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/r8g00bqe5epw"
                        android:textColor="#0F1419"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Let's test your knowledge!"
                        />
                    <TextView
                        android:id="@+id/r8vvkcz73347"
                        android:textColor="#0F1419"
                        android:textSize="16sp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Complete the test to see how much you've learned. Good luck!"
                        />
                    <LinearLayout
                        android:id="@+id/r326b78tp18t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/r52en8o6v33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_background"
                            android:paddingVertical="12dp"
                            android:backgroundTint="#5C708A"
                            android:paddingHorizontal="19dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/rop6jafa0b5f"
                                android:textColor="#F9F9F9"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Start Test"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>